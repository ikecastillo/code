<html>
  <head>
    <title>$i18n.getText("qmetry.admin.label")</title>
    <meta name="decorator" content="atl.admin" />
    $webResourceManager.requireResource("com.dt.jira.plugin.qmetry-integration:qmetry-integration-resources")
    <meta name="application-base-url" content="$applicationProperties.getBaseUrl()">
  </head>
  <body>
		<div class="header">
        <h3 class="formtitle">$i18n.getText("qmetry.admin.label")</h3>
    </div>
    <form id="admin" class="aui">
      <div class="field-group">
        <label for="qmetryurl">$i18n.getText("qmetry.admin.qmetryurl.label")</label>
        <input type="text" id="qmetryurl" name="qmetryurl" class="text">
      </div>
      <div class="field-group">
        <label for="qmetryuid">$i18n.getText("qmetry.admin.qmetryuid.label")</label>
        <input type="text" id="qmetryuid" name="qmetryuid" class="text">
      </div>
      <div class="field-group">
        <label for="qmetrypwd">$i18n.getText("qmetry.admin.qmetrypwd.label")</label>
        <input type="password" id="qmetrypwd" name="qmetrypwd" class="text">
      </div>
      <div class="field-group">
        <input type="submit" value="$i18n.getText("qmetry.admin.save.label")" class="button">
        <input type="button" value="$i18n.getText("qmetry.admin.test.label")" class="button" onclick="alert('Test not implemented yet');return false;">
				<input type="button" value="$i18n.getText("qmetry.admin.cancel.label")" class="button" onclick="location.href='/plugins/servlet/upm#manage'">
      </div>
    </form>

		<script type="text/javascript">
      var baseUrl = "$applicationProperties.getBaseUrl()";
    </script>
	</body>
</html>
