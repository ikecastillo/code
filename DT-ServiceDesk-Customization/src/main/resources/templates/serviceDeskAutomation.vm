    </div>
    <!-- Dialog footer -->
    <footer class="aui-dialog2-footer">
        <!-- Actions to render on the right of the footer -->
        <div class="aui-dialog2-footer-actions">
            <button id="editsettings-save-button" class="aui-button">
                Save
            </button>
            <button id="editsettings-close-button" class="aui-button aui-button-link dialog-close-button">Close</button>
