<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="FishEyeAnnouncementBanner"/>
    
    <!-- add our web resources -->
    <web-resource key="FishEyeAnnouncementBanner-resources" name="FishEyeAnnouncementBanner Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="FishEyeAnnouncementBanner.css" location="/css/FishEyeAnnouncementBanner.css"/>
        <resource type="download" name="FishEyeAnnouncementBanner.js" location="/js/FishEyeAnnouncementBanner.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>FishEyeAnnouncementBanner</context>
        <context>atl.general</context>
    </web-resource>

    <web-resource key="FishEyeAnnouncementBanner-admin-resources" name="FishEyeAnnouncementBanner Admin config Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="BannerConfig.js" location="/js/BannerConfig.js"/>
        <context>atl.admin</context>
    </web-resource>



    <servlet key="bannerSettingsServlet" class="com.dt.plugin.fecru.announcementbanner.servlet.BannerSettingsServlet">
        <url-pattern>/banner-settings</url-pattern>
    </servlet>

    <web-item key="config-link" section="system.admin/global" weight="5" application="fecru">
        <link>/plugins/servlet/banner-settings</link>
        <label key="Announcement Banner"/>
    </web-item>

    <component-import key="templateRenderer" interface="com.atlassian.templaterenderer.TemplateRenderer" />

    <ao key="ao-module-group">
        <description>The module configuring the Active Objects service used by this plugin</description>
        <entity>com.dt.plugin.fecru.announcementbanner.ao.BannerDB</entity>
    </ao>
    <component-import key="ao" name="Active Objects service" interface="com.atlassian.activeobjects.external.ActiveObjects">
        <description>Component to access Active Objects functionality from the plugin</description>
    </component-import>

    <component key="banner-service" name="banner-service" class="com.dt.plugin.fecru.announcementbanner.service.BannerServiceImpl"
               public="true">
        <interface>com.dt.plugin.fecru.announcementbanner.service.BannerService</interface>
    </component>

    <rest name="Announcement Banner API" i18n-name-key="announcement-rest-api.name" key="announcement-rest-api" path="/banner" version="1.0">
        <description key="announcement-rest-api.description">REST API for the Fisheye Announcement Banner</description>
    </rest>

    
</atlassian-plugin>