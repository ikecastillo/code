<html>
  <head>
    <title>$i18n.getText("pagerduty.admin.label")</title>
    <meta name="decorator" content="atl.admin" />
    $webResourceManager.requireResource("com.dt.jira.pagerduty.intgt.plugin.PagerDuty-integration-plugin:PagerDuty-integration-plugin-resources1.0")
    <meta name="application-base-url" content="$applicationProperties.getBaseUrl()">
  </head>
  <body>
		<div class="header">
            <h3 class="formtitle">$i18n.getText("pagerduty.admin.label")</h3>
        </div>
    <form id="pdinitsetadmin" class="aui">
      <div class="field-group">
        <label for="pduid">$i18n.getText("pagerduty.admin.pagerdutyuid.label")</label>
        <input type="text" id="pduid" name="pduid" class="text"/>
      </div>
      <div class="field-group">
        <label for="pdpwd">$i18n.getText("pagerduty.admin.pagerdutypwd.label")</label>
        <input type="password" id="pdpwd" name="pdpwd" class="text"/>
      </div>
	  <div class="field-group">
        <label for="pdinterval">$i18n.getText("pagerduty.admin.pagerdutyinterval.label")</label>
        <input type="text" id="pdinterval" name="pdinterval" class="text"/>
      </div>
	  <div class="field-group">
        <label for="pdjiraemailid">$i18n.getText("pagerduty.admin.pagerdutyjiraemailid.label")</label>
        <input type="text" id="pdjiraemailid" name="pdjiraemailid" class="text"/>
      </div>
      <div class="field-group">
          <label for="pdhipchattoken">$i18n.getText("pagerduty.admin.pagerdutyhipchattoken.label")</label>
          <input type="text" id="pdhipchattoken" name="pdhipchattoken" class="text"/>
      </div>
      <div class="field-group">
          <label for="pdrestapibaseurl">$i18n.getText("pagerduty.admin.restapi.label")</label>
          <input type="text" id="pdrestapibaseurl" name="pdrestapibaseurl" class="text"/>
          <div class="description">$i18n.getText("pagerduty.admin.pdrestapibaseurl.description")</div>
      </div>
      <div class="field-group">
          <label for="pddturl">$i18n.getText("pagerduty.admin.dtpagerdutyurl.label")</label>
          <input type="text" id="pddturl" name="pddturl" class="text"/>
          <div class="description">$i18n.getText("pagerduty.admin.pddturl.description")</div>
      </div>
      <div class="field-group">
          <label for="pdserviceslimit">$i18n.getText("pagerduty.admin.pdserviceslimit.label")</label>
          <input type="text" id="pdserviceslimit" name="pdserviceslimit" class="text"/>
          <div class="description">$i18n.getText("pagerduty.admin.pdserviceslimit.description")</div>
      </div>
      <div class="field-group">
          <label for="pdapitoken">$i18n.getText("pagerduty.admin.pdapitoken.label")</label>
          <input type="text" id="pdapitoken" name="pdapitoken" class="text"/>
          <div class="description">$i18n.getText("pagerduty.admin.pdapitoken.description")</div>
      </div>
      <div class="field-group">
        <input type="submit" value="$i18n.getText("pagerduty.admin.save.label")" class="button">
        <input type="button" value="$i18n.getText("pagerduty.admin.cancel.label")" class="button" onclick="location.href='/plugins/servlet/upm#manage'">
      </div>
    </form>

		<script type="text/javascript">
      var baseUrl = "$applicationProperties.getBaseUrl()";
    </script>
	</body>
</html>
